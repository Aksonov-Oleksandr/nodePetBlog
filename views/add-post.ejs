<%- include('./partials/head.ejs')%>
<body>
<%- include('./partials/nav.ejs')%>
<div class="form-back">
    <form id="post-form" method="post" action="/add-post">
        <div class="form-info">
            <label>Post title
                <input type="text" name="title">
            </label>
            <label>Author
